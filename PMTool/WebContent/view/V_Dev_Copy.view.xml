<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="PMTool.controller.V_Dev_Copy"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
	<pages>
			<Page title="Copy" showNavButton="true" navButtonPress="f_GotoProj">
								<content>
				    <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0" maxContainerCols="2" width="auto">
				    	<sap.ui.layout.form:content>
				    	
							<Label text="Developer" required="true"/>
							<Input width="80%" id="idDeveloper" maxLength="12"/>
							<Label text="Developer Name"/>
							<Input width="20%" id="idName" maxLength="30"/>
							<Label text="Active"/>
							<CheckBox id="idDevCActive"/>
		      	
				         		        </sap.ui.layout.form:content> 
				    </sap.ui.layout.form:SimpleForm>
				</content>
				<footer>
			    <Bar id="__bar0">
			        <contentRight>
			            <Button text="Save" width="100px" id="idGapSave" type="Accept" icon="sap-icon://save" press="fSaveDev"/>
			            <Button text="Cancel" width="100px" id="idGapCancel" icon="sap-icon://cancel" type="Reject" press="f_GotoProj"/>
			        </contentRight>
			    </Bar>
			</footer>
			</Page>
		</pages>
	</App>
</mvc:View>